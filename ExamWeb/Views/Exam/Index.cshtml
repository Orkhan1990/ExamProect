@model List<Exam>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Imtahan Siyahısı</h1>
<table class="table caption-top">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Imtahan Tarixi</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">#</th>
                <td>@item.ExamDate</td>
                <td><a href="/Exam/UpdateExam/@item.Id" class="btn btn-success">Düzəlt</a></td>
                <td><a href="/Exam/DeleteExam/@item.Id" class="btn btn-danger">Sil</a></td>
            </tr>

        }
    </tbody>
</table>
<a href="/Exam/Create" class="btn btn-primary">Yarat</a>

